{
	"name": "mongoose-express-ts",
	"version": "1.0.0",
	"description": "Mongoose Node.js Express TypeScript application boilerplate with best practices for API development.",
	"author": "Paul Cham",
	"license": "MIT",
	"scripts": {
		"tsc": "tsc",
		"watch-tsc": "tsc -w",
		"deploy": "node dist/src/server.js",
		"watch-deploy": "nodemon dist/src/server.js",
		"server": "concurrently \"npm run watch-tsc\" \"npm run watch-deploy\"",
		"start": "npm run deploy"
	},
	"dependencies": {
		"bcrypt": "^5.1.0",
		"concurrently": "^7.5.0",
		"config": "^3.3.8",
		"express": "^4.18.2",
		"http-status-codes": "^2.2.0",
		"joi": "^17.6.4",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.6.7"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/config": "^3.3.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/mongoose": "^5.11.97",
		"@types/node": "^18.11.4",
		"cors": "^2.8.5",
		"nodemon": "^2.0.20",
		"tslint": "^6.1.3",
		"typescript": "^4.8.4"
	}
}
